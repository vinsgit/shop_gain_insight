<%= simple_form_for @item_link do |f| %>
  <%= f.input :name, label: t('item_link.name') %>
  <%= f.input :shop_id, label: t('shop.name'), collection: Shop.all.map{ |c| [c.name, c.id] }, selected: @item_link.shop_id %>
  <%= f.label :sku_ids, t('item_link.sku_ids') %>
  <%= f.select :sku_ids, options_for_select(Sku.all.map{ |s| [s.name, s.id] }, @sku_ids), {}, { multiple: true, class: 'form-control select2' } %>
  <div class="mt-3">
    <%= f.button :submit, t('form.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'shared/back' %>
