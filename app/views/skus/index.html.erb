<%= render 'filters' %>

<table class="table">
  <thead>
    <tr>
      <th><%= t('sku.name') %></th>
      <th><%= t('sku.price') %></th>
      <th><%= t('sku.ads_cost') %></th>
      <th><%= t('sku.created_at') %></th>
      <th><%= t('actions.title') %></th>
    </tr>
  </thead>
  <tbody>
    <% @skus.each do |sku| %>
      <tr>
        <td><%= sku.name %></td>
        <td><%= sku.price %>$</td>
        <td><%= sku.ads_cost.to_d.round(3) %>$</td>
        <td><%= sku.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('actions.edit'), edit_sku_path(sku), class: 'btn btn-primary btn-sm' %>
          <!-- TODO 详情页 TBD -->
          <% link_to t('actions.details'), sku_path(sku), class: 'btn btn-info btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>

<%= render 'shared/back' %>