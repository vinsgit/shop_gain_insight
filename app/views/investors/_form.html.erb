<%= simple_form_for @investor do |f| %>
  <%= f.input :name, label: '名字' %>
  <%= f.simple_fields_for :equity_allocation_record do |ff| %>
    <%= ff.input :ratio, label: '比例' %>
    <%= ff.input :start_at, label: '生效时间' %>
    <%= ff.input :end_at, label: '停止时间' %>
  <% end %>
  <%= f.button :submit, '提交', class: 'btn btn-primary' %>
<% end %>

<%= render 'shared/back' %>

<script>
  $(document).ready(function(){
    flatpickr('#investor_equity_allocation_record_start_at, #investor_equity_allocation_record_end_at');
  });
</script>