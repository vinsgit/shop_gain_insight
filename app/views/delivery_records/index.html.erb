<%= link_to t('titles.delivery_record.create'), new_delivery_record_path, class: 'btn btn-primary' %>
<br>

<%= render 'filters' %>

<table class="table">
  <thead>
    <tr>
      <th><%= t('delivery_record.deliver_at')%></th>
      <th><%= t('delivery_record.status')%></th>
      <th><%= t('sku.name')%></th>
      <th><%= t('delivery_record.arrived_count')%></th>
      <th><%= t('delivery_record.sent_count')%></th>
      <th><%= t('delivery_record.stock_qty')%></th>
      <th><%= t('actions.name')%></th>
    </tr>
  </thead>
  <tbody>
    <% @delivery_records.each do |r| %>
      <tr>
        <td><%= r.deliver_at&.strftime('%Y-%m-%d') %></td>
        <td><%= r.status %></td>
        <td><%= r.sku.name %></td>
        <td><%= r.arrived_count %></td>
        <td><%= r.sent_count %></td>
        <td><%= r.stock_qty %></td>
        <td>
          <%= link_to '修改', edit_delivery_record_path(r), class: 'btn btn-primary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>

<%= render 'shared/back' %>