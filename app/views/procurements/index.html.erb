<%= link_to t('titles.procurement.create'), new_procurement_path, class: 'btn btn-primary' %>
<br>

<%= render 'filters' %>

<table class="table">
  <thead>
    <tr>
      <th><%= t('sku.name')%></th>
      <th><%= t('procurement.qty')%></th>
      <th><%= t('procurement.unit_price')%></th>
      <th><%= t('procurement.total_price')%></th>
      <th><%= t('procurement.delivery_fee')%></th>
      <th><%= t('procurement.received_qty')%></th>
      <th><%= t('procurement.purchased_at')%></th>
      <th><%= t('procurement.purchased_at')%></th>
      <th><%= t('actions.note')%></th>
    </tr>
  </thead>
  <tbody>
    <% @procurements.each do |r| %>
      <tr>
        <td><%= r.sku&.name %></td>
        <td><%= r.qty %></td>
        <td><%= r.unit_price %></td>
        <td><%= r.total_price %></td>
        <td><%= r.delivery_fee %></td>
        <td><%= r.received_qty %></td>
        <td><%= r.purchased_at&.strftime('%Y-%m-%d') %></td>
        <td><%= r.note %></td>
        <td>
          <%= link_to t('actions.edit'), edit_procurement_path(r), class: 'btn btn-primary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>

<%= render 'shared/back' %>