<%= link_to t('titles.shipment.create'), new_shipment_path, class: 'btn btn-primary' %>
<br>

<%= render 'filters' %>

<table class="table">
  <thead>
    <tr>
      <th><%= t('shipment.aws_order_ref') %></th>
      <th><%= t('shipment.order_ref') %></th>
      <th><%= t('shipment.total_fee') %></th>
      <th><%= t('shipment.channel_in_text') %></th>
      <th><%= t('shipment.transaction_at') %></th>
      <th><%= t('actions.title') %></th>
    </tr>
  </thead>
  <tbody>
    <% @shipments.each do |r| %>
      <tr>
        <td><%= r.aws_order_ref %></td>
        <td><%= r.order_ref %></td>
        <td><%= r.total_fee %></td>
        <td><%= r.channel_in_text %></td>
        <td><%= r.transaction_at&.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td>
          <%= link_to t('actions.edit'), edit_shipment_path(r), class: 'btn btn-primary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_bootstrap_nav(@pagy) %>

<%= render 'shared/back' %>